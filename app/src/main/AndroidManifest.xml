<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".GlobalClass"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@raw/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.WebomsMobile"
        tools:targetApi="31">

        <!--splashscreen activity-->
        <activity
            android:name=".SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />    <!-- do not change-->
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--login-->
        <activity
            android:name=".Login"
            android:exported="true">
            <intent-filter>
                <action android:name=".Login" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!--dashboard-->
        <activity
            android:name=".Dashboard"
            android:exported="true">
            <intent-filter>
                <action android:name=".Dashboard" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!--Menu-->
        <activity
            android:name=".ProductList"
            android:exported="true">
            <intent-filter>
                <action android:name=".ProductList" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!--Cart-->
        <activity
            android:name=".CartPage"
            android:exported="true">
            <intent-filter>
                <action android:name=".CartPage" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>